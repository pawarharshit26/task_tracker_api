    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI Dev server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "module": "fastapi",
            "args": [
                "dev",
                "main.py"
            ],
            "jinja": true
        },
        {
            "name": "Python Debugger: Uvicorn server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}